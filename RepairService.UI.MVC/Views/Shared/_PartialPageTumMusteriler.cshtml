@using RepairService.Entity.Kisi
@model List<Musteri>

    <div>
        <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Tüm Müşteriler</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-dark">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">TC No</th>
                                    <th scope="col">Kullanıcı Adı</th>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Soyad</th>
                                    <th scope="col">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                int sayac = 0;
                                }

                                @foreach (var item in Model)
                            {
                                sayac++;
                                    <tr>
                                        <td scope="row">@sayac</td>
                                        <td scope="row">@item.TcNo</td>
                                        <td scope="row">@item.ApplicationUser.UserName</td>
                                        <td scope="row">@item.ApplicationUser.Name</td>
                                        <td scope="row">@item.ApplicationUser.Surname</td>
                                    <td scope="row"> @Html.ActionLink("Servis Kayitlarına Git", "MusteriServisKayitGetir", "Home", new { id = item.ApplicationUser.Id }, new { @class = "btn btn-danger btn-sm" })</td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>



