
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPageBase.cshtml";
}
<div class="row">
    <div class="container padding-vert-30 margin-top-10">
        @Html.ValidationSummary()
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="container padding-vert-30">
                <h2>
                    Hemen giriş yap, cihaz durumunu yakından takip et!
                </h2>

            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Username, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @if (ViewBag.userName != null)
                    {

                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = ViewBag.userName })

                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı.." })

                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", placeholder = "Şifre..." })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.RememberMe, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.CheckBoxFor(x => x.RememberMe)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Giriş Yap</button> <br />
                    <a href="@Url.Action("Register","Account")">Kayıt Ol</a> 
                   <br />
                    <a href="@Url.Action("RecoverPassword", "Account")">Şifremi Unuttum</a>
                </div>
            </div>

        }
    </div>
</div>
