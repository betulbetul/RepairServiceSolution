@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPageBase.cshtml";
}
<div id="content">
    <div class="container">
        <div class="container">
            <div class="row margin-vert-30">
                <!-- Login Box -->
                <div class="col-md-6 col-md-offset-3 col-sm-offset-3">
                    @Html.ValidationSummary()
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="login-header margin-bottom-30">
                            <h2 class="text-center">Hemen Giriş Yapabilirsiniz</h2>
                        </div>
                        <div class="input-group margin-bottom-20">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            @if (ViewBag.userName != null)
                            {
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = ViewBag.userName })
                            }
                            else
                            {
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı.." })
                                @Html.ValidationMessageFor(x => x.Username)
                            }
                        </div>
                        <div class="input-group margin-bottom-20">
                            <span class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </span>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", placeholder = "Şifre..." })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <span>Beni Hatırla</span>
                                @Html.CheckBoxFor(x => x.RememberMe)
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-default pull-right">Giriş Yap</button> <br />
                            </div>
                        </div>
                        <hr>
                        <h4>Şifrenizi mi unuttunuz?</h4>
                        <p>
                            @Html.ActionLink("Yeni Şifre Talebiniz için BURAYA Tıklayınız", "UpdatePassword", "Account", new { n = Model.Username },null)
                        </p>
                    }
                </div>
                <!-- End Login Box -->

            </div>
        </div>
    </div>
</div>