@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPageBase.cshtml";
}
<div class="container">
    <br />
    <div class="row margin-vert-30">
        <!--Register Box-->
        <div class="col-md-6 col-md-offset-3 col-sm-offset-3">
            <span class="text-danger">@Html.ValidationSummary()</span>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post,
                new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="signup-header">
                    <h2>Hemen Kayıt Olabilirsiniz</h2>
                    <p>
                        Zaten üye misiniz? Click
                        <a href="@Url.Action("Login","Account")">BURAYA</a> tıklayarak giriş yapabilirsiniz.
                    </p>
                </div>
                <hr />
                <label>Tc No</label>
                @Html.TextBoxFor(x => x.TcNo, new { @class = "form-control margin-bottom-10" })
                <label>Adınız</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control margin-bottom-10" })
                <label>Soyadınız</label>
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control margin-bottom-10" })
                <label>
                    Email Adresi
                    <span class="color-red">*</span>
                </label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control margin-bottom-10", type = "email" })
                <label>
                    Kullanıcı Adı
                    <span class="color-red">*</span>
                </label>
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control margin-bottom-10" })
                <!-------->
                <div class="row">
                    <div class="col-sm-6">
                        <label>
                            Şifre
                            <span class="color-red">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control margin-bottom-10", type = "password" })
                        <span class="text-danger">  @Html.ValidationMessageFor(x => x.Password) </span>
                    </div>
                    <div class="col-sm-6">
                        <label>
                            Şifre Tekrar
                            <span class="color-red">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control margin-bottom-10", type = "password" })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.ConfirmPassword)</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-offset-9">
                        <button type="submit" class="btn btn-default btn-lg">Kayıt Ol</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>