@model ProfileViewModel
@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/Shared/_LayoutPageBase.cshtml";
}
<div id="content">
    <div class="container">

        <div class="container">
            <div class="row margin-vert-30">
                <div class="row">
                    <!-- Login Box -->
                    <div class="col-md-6 col-md-offset-3 col-sm-offset-3">
                        @Html.ValidationSummary()
                        @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="login-header margin-bottom-30">
                                <h2 class="text-center">Şifrenizi yenileyebilirsiniz...</h2>
                            </div>
                            <div class="input-group margin-bottom-20">
                                <span class="input-group-addon">
                                    <i class="fa fa-lock"></i>
                                </span>

                                @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control", type = "password", placeholder = "Eski Şifreniz" })
                                @Html.ValidationMessageFor(x => x.OldPassword)
                            </div>
                            <div class="input-group margin-bottom-20">
                                <span class="input-group-addon">
                                    <i class="fa fa-lock"></i>
                                </span>
                                @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", type = "password", placeholder = "Yeni Şifre..." })
                                @Html.ValidationMessageFor(x => x.NewPassword)
                            </div>
                            <div class="input-group margin-bottom-20">
                                <span class="input-group-addon">
                                    <i class="fa fa-lock"></i>
                                </span>
                                @Html.TextBoxFor(x => x.ConfirmNewPassword, new { @class = "form-control", type = "password", placeholder = "Yeni Şifre Tekrar..." })
                                @Html.ValidationMessageFor(x => x.ConfirmNewPassword)
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-blue pull-right">Şifreyi Değiştir</button> <br />
                                </div>
                            </div>
                            <hr>
                        }
                    </div>
                    <!-- End Login Box -->
                </div>
            </div>
        </div>
    </div>
</div>