@model ProfileViewModel
@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_LayoutPageBase.cshtml";
}
<div id="content">
    <div class="container">
        <div class="container">
            <div class="row margin-vert-30">
                <div class="col-md-12 col-md-offset-3 col-sm-offset-3">
                    @using (Html.BeginForm("RecoverPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        if (ViewBag.Sonuc != null)
                        {
                            <div class="login-header margin-bottom-30 col-md-6">
                                <h4>@ViewBag.Sonuc</h4>
                            </div><br />

                        }
                        else
                        {
                            <div class="row">
                                <div class="login-header margin-bottom-30 col-md-6">
                                    <h2 class="text-center">Yeni şifre talep edebilirsiniz</h2>
                                </div>
                            </div>
                                <div class="row">
                                    <div class="input-group col-md-6 margin-bottom-20">
                                        <span class="input-group-addon">
                                            <i class="fa fa-user"></i>
                                        </span>
                                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı adınızı yazınız..." })
                                        @Html.ValidationMessageFor(x => x.Username)
                                    </div>
                                    <div class="form-group col-md-6">
                                        <button type="submit" id="btngonder" class="btn btn-bronze">GÖNDER</button>
                                    </div>
                                </div>



                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>